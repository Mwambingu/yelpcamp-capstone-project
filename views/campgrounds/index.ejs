<%layout("layouts/boilerplate")%>

<h1>All Campgrounds</h1>
<!-- <button id="create-btn">Create New Campground</button> -->
<ul>
    <% for (let camp of camps) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%=camp.image%>" alt="" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-tex">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a href="/campgrounds/<%=camp.id%>" class="btn btn-primary"
                        >View <%= camp.title %></a
                    >
                </div>
            </div>
        </div>
    </div>
    <% } %>
</ul>

<script>
    const createBtn = document.querySelector("#create-btn");
    createBtn.addEventListener("click", (evt) => {
        location.href = "/campgrounds/new";
    });
</script>
